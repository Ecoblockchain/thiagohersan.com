meta(name="twitter:card" content="summary_large_image")
meta(name="twitter:site" content="#{config.social.twitter_user}")
meta(name="twitter:title" content="#{page.title}")
meta(name="twitter:description" content="#{page.title}: #{page.description}")
meta(name="twitter:creator" content="#{config.social.twitter_user}")


meta(property="og:title" content="#{page.title}")
meta(property="og:type" content="article")
meta(property="og:url" content="#{config.url}#{page.url}")
meta(property="og:description" content="#{page.title}: #{page.description}")
meta(property="og:site_name" content="#{config.title}")
meta(property="article:publisher" content="https://#{config.social.facebook_url}")

if page.cover
  meta(name="twitter:image" content="#{config.url}#{page.cover}")
  meta(property="og:image" content="#{config.url}#{page.cover}")
else
  meta(name="twitter:image" content="#{config.url}#{config.default_cover}")
  meta(property="og:image" content="#{config.url}#{config.default_cover}")
